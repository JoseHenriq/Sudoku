<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools  ="http://schemas.android.com/tools"
    android:layout_width ="match_parent"
    android:layout_height="match_parent"
    tools:context=".JogarActivity" >

    <RelativeLayout
        android:layout_width ="match_parent"
        android:layout_height="wrap_content" >

        <!--- Nível do jogo -->
        <TextView android:id="@+id/tv_LegNivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="70dp"

            android:textSize ="24dp"
            android:textStyle="bold"
            android:text     ="Nível: " />

        <TextView android:id="@+id/tv_Nivel"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/tv_LegNivel"
            android:layout_marginTop="70dp"

            android:text="1000"
            android:textSize="24dp"
            android:textStyle="bold" />

        <!--- Contador de erros -->
        <TextView android:id="@+id/tv_LegErros"
            android:layout_width ="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop ="70dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf ="@id/tv_Nivel"

            android:textSize ="24dp"
            android:textStyle="bold"
            android:text     ="Erros: " />

        <TextView android:id="@+id/tv_Erros"
            android:layout_width ="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/tv_LegErros"
            android:layout_marginTop="70dp"

            android:text     ="99"
            android:textSize ="24dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/MargemEsquerdaBoard"
        android:layout_marginTop  ="@dimen/MargemAcima"

        android:contentDescription="@string/testeCanva3"
        android:src="@drawable/sudoku_board_w360h315" />

    <ImageView android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart = "@dimen/MargemEsquerdaBoard"
        android:layout_marginTop  ="100dp"
        android:layout_below="@id/imageView1"
        android:contentDescription="@string/numDisp"
        android:src="@drawable/quadro_nums_disp" />

    <Button android:id="@+id/btnReset"
        style="?android:attr/buttonStyleSmall"
        android:layout_width ="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd   ="true"
        android:layout_alignParentBottom="true"

        android:textAllCaps ="false"
        android:text="@string/reset" />

    <Button android:id="@+id/btnInicia"
        style="?android:attr/buttonStyleSmall"
        android:layout_width ="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/btnReset"

        android:textAllCaps ="false"
        android:text="@string/inicia" />

</RelativeLayout>