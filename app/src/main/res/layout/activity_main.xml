<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app    ="http://schemas.android.com/apk/res-auto"
    xmlns:tools  ="http://schemas.android.com/tools"

    android:layout_width ="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline

        android:id           ="@+id/guide_center"
        android:layout_width ="wrap_content"
        android:layout_height="wrap_content"
        android:orientation  ="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button android:id="@+id/btn_GeraJogo"

        android:layout_width ="@dimen/WidthBotao"
        android:layout_height="@dimen/HeightBotao"

        app:layout_constraintStart_toStartOf  ="parent"
        app:layout_constraintEnd_toEndOf      ="@id/guide_center"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginRight="@dimen/MargemDireita"
        android:layout_marginLeft ="@dimen/MargemEsquerda"

        android:textColor ="@android:color/white"

        android:textAlignment="center"
        android:textAllCaps  ="false"
        android:textSize     ="34sp"
        android:text         ="@string/gera_novo_jogo"

        android:onClick      ="btnGeraJogoClick" />

    <Button android:id="@+id/btn_AdaptaJogo"

        android:layout_width ="@dimen/WidthBotao"
        android:layout_height="@dimen/HeightBotao"

        android:layout_marginRight="@dimen/MargemDireita"
        android:layout_marginLeft ="@dimen/MargemEsquerda"

        app:layout_constraintStart_toEndOf    ="@id/guide_center"
        app:layout_constraintEnd_toEndOf      ="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:textColor    ="@android:color/white"
        android:textAlignment="center"
        android:textAllCaps  ="false"
        android:textSize     ="34sp"
        android:text         ="@string/adapta_jogo"

        android:onClick="btnAdaptaJogoClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>